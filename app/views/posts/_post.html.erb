<div id="list-post" class="list-post-<%= post.id %>">
  <div class="panel panel-default post" >
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-2">
          <a href="profile.html" class="post-avatar thumbnail"><%= image_tag "user.png" %><div class="  text-center"><%= post.user.full_name %></div></a>
          <div class="likes text-center">7 Likes</div>
        </div>
        <div class="col-sm-10">
          <div class="bubble">
            <div class="pointer">
              <p><%= link_to post.title, post, class: "title-post", data: {id:post.id, target: "#myModal2", toggle: "toggle", turbolinks: "false"}  %></p>
              <p><%= post.content %></p>
            </div>
            <div class="pointer-border"></div>
          </div>
          <% if can? :update, post %>
          <p class="post-actions"> <%= link_to "Edit", edit_post_path(post), class: "edit-post", data: {id: post.id}  %> - <%= link_to "Delete", post, class: "delete-post", data: {id: post.id}  %></a> - <a href="#">Follow</a> - <a href="#">Share</a></p>
            <div class="comment-form">
              <form class="form-inline">
                <div class="form-group">
                  <input type="text" class="form-control" placeholder="enter comment">
                </div>
                <button type="submit" class="btn btn-default">Add</button>
              </form>
            </div>
          <% end %>
         <div class="clearfix"></div>
       </div>
      </div>
    </div>
  </div>
</div>
