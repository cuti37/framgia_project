<header>
  <div class="container">
    <%= image_tag "logo.png" %>
    <form class="form-inline">
      <div class="form-group">
        <label class="sr-only" for="exampleInputEmail3"><%= t ".email_address" %></label>
        <input type="email" class="form-control" id="exampleInputEmail3"
        placeholder= <%= t ".enter_email" %>>
      </div>
      <div class="form-group">
        <label class="sr-only" for="exampleInputPassword3"><%= t ".password" %></label>
        <input type="password" class="form-control" id="exampleInputPassword3"
        placeholder= <%= t ".password" %>>
      </div>
        <button type="submit" class="btn btn-default"><%= t ".sign_in" %></button><br>
      <div class="checkbox">
        <label>
          <input type="checkbox"> <%= t ".remember_me" %>
        </label>
      </div>
    </form>
  </div>
</header>
